@using Microsoft.AspNetCore.Identity
@using Gym.Models
@inject UserManager<ApplicationUser> UserManager

@model IEnumerable<Gym.Models.GymClass>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}

@{
    ViewData["Title"] = "Upcoming Gym Classes";
}

<h1>@ViewData["Title"]</h1>

@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.StartTime)</th>
            <th>@Html.DisplayNameFor(model => model.Duration)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.StartTime)</td>
                <td>@Html.DisplayFor(modelItem => item.Duration)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>
                    @* Admin sees Edit/Delete *@
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <span> | </span>
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        <span> | </span>
                    }

                    @* Logged-in users (Admin + User) can Book *@
                    @if (User.Identity.IsAuthenticated)
                    {
                        var userId = UserManager.GetUserId(User);
                        var isBooked = item.AttendingMembers?.Any(a => a.ApplicationUserId == userId) ?? false;

                        if (isBooked)
                        {
                            <a asp-action="BookingToggle" asp-route-id="@item.Id">Cancel booking</a>
                        }
                        else
                        {
                            <a asp-action="BookingToggle" asp-route-id="@item.Id">Book</a>
                        }

                        <span> | </span>
                    }
                    else
                    {
                        <span class="text-muted">Login to book</span>
                        <span> | </span>
                    }

                    @* Everyone can see Details *@
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>